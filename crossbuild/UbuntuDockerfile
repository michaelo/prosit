# Basic ubuntu image with the build-toolchain required for building prosit
FROM ubuntu

# Setup timezone to avoid apt-get installation to hang on prompt
ENV TZ=Europe/Oslo
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN echo 'Installing packages'

# General dependencies
RUN apt-get update && apt-get install -y apt-utils gcc pkg-config bash
RUN apt-get install -y python3.7 python3-pip ninja-build
RUN pip3 install meson

# App-specific dependencies
RUN apt-get install -y libcurl4-openssl-dev git
